//
// Global styles and fun stuff
// –––––––––––––––––––––––––––––––––––––––––––


// Variables
$maxSiteWidth = 1140px
$desktopWidth = 940px
$tabletWidth  = 720px
$mobileWidth  = 100%


// This is our repsonive scale, based on
// default Bootstrap breakboints.
//
// Reference: http://jenius.github.io/rupture/
//
scale = 0px 768px 992px 1200px
mobile-cutoff   = 768px
tablet-cutoff   = 992px
desktop-cutoff  = 1200px

//
// Global layout
// –––––––––––––––––––––

.main section
  position: relative
  padding: 70px 0

.center
  position: relative
  clear: both
  center(maxWidth = $maxSiteWidth)

  +below(3)
    width: $desktopWidth

  +below(2)
    width: $tabletWidth

  +below(1)
    width: $mobileWidth
    padding: 0 10px

body,
html,
main
  padding: 0px
  margin: 0px
	height: 100%

a
  color: #00B7FF


section
  border-bottom: 2px solid rgba($grey-lighter, .9)
  box-shadow: 0 0 5px
  padding-top: 100px

  &.main-image
    padding-top: 200px
    width: 100%
    background-image: url('../images/summer.jpg')

    h1
      color: white

  &.cd-fixed-bg
    min-height: 100vh
    background-size: cover
    background-attachment: fixed
    background-repeat: no-repeat
    background-position: center center

  &.cd-scrolling-bg
    min-height: 100vh
