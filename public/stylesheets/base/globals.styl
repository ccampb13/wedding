//
// Global styles and fun stuff
// –––––––––––––––––––––––––––––––––––––––––––


// Variables
$maxSiteWidth = 1140px
$desktopWidth = 940px
$tabletWidth  = 720px
$mobileWidth  = 100%


// This is our repsonive scale, based on
// default Bootstrap breakboints.
//
// Reference: http://jenius.github.io/rupture/
//
scale = 0px 768px 992px 1200px
mobile-cutoff   = 768px
tablet-cutoff   = 992px
desktop-cutoff  = 1200px

//
// Global layout
// –––––––––––––––––––––

.main section
  position: relative
  padding: 70px 0

.center
  position: relative
  clear: both
  margin: 0 auto
  width: 1140px

  @media screen and (max-width: 1200px)
    width: 90%
    margin: 0 5%

body,
html,
main
  padding: 0px
  margin: 0px
	height: 100%

a
  color: $goldenrod
  text-decoration: none


section
  padding-top: 70px

  @media screen and (max-width:767px)
    padding-top: 20px

  &.main-image
    width: 100%
    background-image: url('../images/summer.jpg')
    background-color darken($grey-darker, 50%)

    h1
      color: white
      width: 100%

  &.cd-fixed-bg
    min-height: 100vh
    background-size: cover
    background-attachment: fixed
    background-repeat: no-repeat
    background-position: center center

  &.cd-scrolling-bg
    min-height: 100vh
