//
// Global styles and fun stuff
// –––––––––––––––––––––––––––––––––––––––––––


// Variables
$maxSiteWidth = 1140px
$desktopWidth = 940px
$tabletWidth  = 720px
$mobileWidth  = 100%


// This is our repsonive scale, based on
// default Bootstrap breakboints.
//
// Reference: http://jenius.github.io/rupture/
//
scale = 0px 768px 992px 1200px
mobile-cutoff   = 768px
tablet-cutoff   = 992px
desktop-cutoff  = 1200px

//
// Global layout
// –––––––––––––––––––––

.main section
  position: relative
  padding: 70px 0

.center
  position: relative
  clear: both
  margin: 0 auto
  width: 1140px

  @media screen and (max-width: 1200px)
    width: 90%
    margin: 0 5%

body,
html,
main
  padding: 0px
  margin: 0px
	height: 100%

a
  color: $goldenrod
  text-decoration: none

section
  padding-top: 70px

  &.hero
    width: 100%
    $section-height = 100vh
    $section-min-height = 650px
    position: relative
    padding-top: 20px
    height: $section-height
    min-height: $section-min-height

    div#crossfade
      padding: 0
      margin: 0
      width: 100%
      position: absolute
      background-color: darken($grey-darker, 50%)
      top: 0
      left: 0
      z-index: -1

      figure
        position: absolute
        width: 100%
        background-image: url('../images/photo-booth.jpg')
        background-size: cover
        background-position: center center
        background-attachment: fixed // reset for mobile
        height: $section-height
        min-height: $section-min-height
        margin: 0
        z-index: 1
        top: 0
        left: 0

        // &:nth-child(2)
        //   background-image: url('')
        //

        &.active
          z-index: 3

    article
      position: absolute
      text-align: center
      color: $white
      width: 100%
      height: 87vh

      h1
        color: $white

    @media screen and (max-width:767px)
      div#crossfade
        figure
          background-attachment: scroll
          background-size: 350% auto
          background-position: center top



  &.cd-fixed-bg
    min-height: 100vh
    background-size: cover
    background-attachment: fixed
    background-repeat: no-repeat
    background-position: center center

  &.cd-scrolling-bg
    min-height: 100vh
