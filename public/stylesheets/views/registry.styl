section.registry
  text-align: center

  article.where-to-buy
    margin: 5px auto
    width: 60%
    padding: 20px

    p
      font-size: 30px
      color: $grey-lighter

    ul.register-links
      padding: 20px
      margin: 20px auto

      li
        display: inline-block

        a
          margin: 50px
          opacity: .5;
          &:hover
            opacity: 1

@media screen and (min-width: 480px) and (max-width: 767px)
  section.registry
    article.where-to-buy
      ul.register-links
        li
          display: block

          a
            margin: 0
            img
              padding-bottom: 30px
              width: 300px

@media screen and (max-width: 479px)
  section.registry
    article.where-to-buy
      ul.register-links
        li
          display: block

          a
            margin: 0

            img
              width: 200px
              padding-bottom: 30px
