section.registry
  padding-bottom: 40px

  div.center
    article.where-to-buy
      hr
        margin: 3.2% auto
        color: rgba($grey-darker, .2)
        width: 10%

      p
        max-width 80%
        margin 0 auto


      ul.register-links
        text-align center
        padding: 0
        padding-top 30px

        li
          display: inline-block

          a
            margin: 50px
            opacity: .5

            &:hover
              opacity: 1

  @media screen and (max-width: 767px)
    padding: 30px 0

    div.center
      article.where-to-buy
        p
          max-width 90%

        ul.register-links
          li
            display: block

            a
              margin: 0 auto

              img
                width: 200px
                padding-bottom: 30px
