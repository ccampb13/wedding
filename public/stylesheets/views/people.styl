section.people
  padding-top: 30px

  div.center
    text-align: center

    article.opening-statement
      width: 80%
      margin: 0 auto

      h6
        line-height: 1.25em
        text-align: left

    article.profiles
      margin-top: 30px

      ul
        tl(auto)

        li
          list-style-type: none
          display: inline-block
          margin: 1%
          padding: 2%

          &:last-child
            padding-top: 0
            margin-top: 0

          figure
            width: 300px
            padding: 0
            margin: 0
            text-align: center
            display: block
            overflow: hidden

            img.profile
              width: 300px
              height: 100%
              border-radius: 4px

            hr
              margin-top: 3.2%
              color: rgba($black, .2)
              width: 20%

            p
              font-size: 14px
              text-align: left

  @media screen and (min-width: 480px) and (max-width: 767px)
    article.profiles
      ul li figure
        padding: 0
        width: 500px
        margin-top: 20px

        img.profile
          width: 100%
          height: auto

  @media screen and (max-width: 479px)
    article.profiles
      ul li figure
        width: 80%
        margin: 0 auto


section.bridesmaids
  padding: 50px 0 10px
  width: 100%
  background-color: $gallery

  div.center
    article.party
      text-align: center

      h2
        color $grey-darker

      hr
        margin-top: 3.2%
        color: rgba($black, .2)
        width: 20%

      ul
        padding: 0
        margin: 0

        li
          list-style-type: none
          display: inline-block
          margin: 5px

          a
            text-decoration: none
            color: $grey-darker
            opacity: .5

            span
              margin-left: 5px
              color: rgba($grey-lighter, .5)

            &.active
              border-bottom: 1px solid $grey-darker
              opacity: 1

  div#bridesmaids-container
    min-height: 400px
    text-align: center

    article
      background-color: $white
      display: inline-block
      margin: 20px auto
      border-radius: 4px
      width: 50%
      padding: 2%
      text-align: left
      height: auto
      position: relative

      figure
        position: absolute
        top: calc(50% - 110px)
        left: 2%
        width: 300px
        width: 100px
        padding: 0
        margin: 0
        display: block
        overflow: hidden

        img
          width: 200px
          height: 200px
          border-radius: 50%


      h4, p
        width: 100%
        float: right
        margin: 5px

      h4
        text-align: left

@media screen and (min-width: 768px) and (max-width: 1100px)
  section.bridesmaids
    div#bridesmaids-container
      article
        width: 90%

@media screen and (max-width: 767px)
  section.bridesmaids
    div#bridesmaids-container
      article
        width: 80%

        figure
          display: none

        h4, p
          width: 100%



