section.people
  padding-top: 30px

  div.center
    text-align: center

    article.opening-statement
      width: 80%
      margin: 0 auto

      h6
        line-height: 1.25em
        text-align: left

    article.profiles
      margin-top: 70px

      figure
        display: inline-block
        width: 300px
        min-height: 620px
        margin: 10px 20px
        overflow: hidden
        text-align: center

        img.profile
          width: 300px
          height: auto
          border-radius: 4px
          border: 1px solid $grey-lighter

        h5
          display: inline-block
          margin-bottom: 5px

        hr
          margin-top: 3.2%
          color: rgba($black, .2)
          width: 20%

        p
          font-size: 14px
          text-align: left

  @media screen and (min-width: 480px) and (max-width: 767px)
    article.profiles
      figure
        padding: 0
        width: 500px
        margin-top: 20px

        img.profile
          width: 100%
          height: auto

  @media screen and (max-width: 479px)
    article.profiles
      figure
        width: 80%
        margin: 0 auto


