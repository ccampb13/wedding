section.travel
  text-align: center

  article
    display: inline-block
    height: 270px
    margin: 20px
    text-align: center

    figure.icon
      img
        width: 100px
        height: 100px

    p
      text-transform: uppercase
      display: block;
      font-size: 30px

    a.button
      text-transform: uppercase
      text-decoration: none

  h6
    text-transform: uppercase
    font-size: 30px
    margin: 5px

@media screen and (max-width: 479px)
  a.button
    background-color: $white
    color: $grey-darker
    border: 1px solid $grey-darker
