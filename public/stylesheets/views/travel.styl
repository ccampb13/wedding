section.travel
  padding 70px 0

  div.center
    text-align: center

    h2
      margin-top 0

    hr
      margin: 3.2% auto
      color: rgba($black, .2)
      width: 10%

    article
      display: inline-block
      height: 270px
      margin: 10px

      figure.icon
        img
          width: 100px
          height: 100px

      p
        text-transform: uppercase
        display: block;
        font-size: 30px

      a.button
        text-transform: uppercase
        text-decoration: none

    h6
      text-transform: uppercase
      font-size: 24px
      margin 50px 5px 16px

    p.other
      text-align: left
      max-width 80%
      margin 0 auto 16px

      a
        border-bottom 1px dotted $grey-darker
        text-decoration: none


  @media screen and (max-width: 767px)
    div.center
      article
        a.button
          background-color: $white
          color: $grey-darker
          border: 1px solid $grey-darker

      p.other
        text-align: left
        max-width 100%

section.lodging
  background-color: $grey-darker
  text-align: center
  padding: 70px 0

  div.center
    div.copy
      h2
        color $white
        margin-top 0

      hr
        margin: 3.2% auto
        color: rgba($black, .2)
        width: 10%

      p
        color $white
        max-width 80%
        margin 0 auto

    div.options
      ul
        padding-left 0

        li
          list-style-type: none
          display: inline-block
          margin: 5px
          width 60%
          background-color $white
          padding 3%
          border-radius 3px

          p.hotel
            display inline-block
            margin 2px

            a
              text-decoration none
              color $grey-darker

          p
            color $grey-lighter
            margin 2px

    div.other-recs
      ul
        padding-left 0
        li
          list-style-type: none
          display: inline-block
          margin: 5px
          width 28%
          background-color $white
          padding 1%
          border-radius 3px

        p.hotel
          color $grey-darker
          margin 2px

        p
          color $grey-lighter
          margin 2px

    div.airbnb
      p
        color $white
        max-width 80%
        margin 0 auto

  @media screen and (max-width: 767px)
    padding 30px 0

    div.center
      div.copy
        h2
          font-size 18px

        p
          text-align left
          max-width 100%

      div.options
        ul
          li
            width 90%

            h6
              font-size 16px
              line-height 1em

      div.other-recs
        p
          text-align center
          color $white
        ul
          li
            width 90%

      div.airbnb
        margin 0
        padding 0
        p
          max-width 100%
          text-align left
          margin 0
          padding 0
