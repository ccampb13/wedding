section.travel
  div.center
    text-align: center
    hr
      margin-top: 3.2%
      color: rgba($black, .2)
      width: 10%

    article
      display: inline-block
      height: 270px
      margin: 20px

      figure.icon
        img
          width: 100px
          height: 100px

      p
        text-transform: uppercase
        display: block;
        font-size: 30px

      a.button
        text-transform: uppercase
        text-decoration: none

    h6
      text-transform: uppercase
      font-size: 24px
      margin: 5px
      margin-top: 50px

    p.other
      font-size: 24px
      color: $grey-lighter
      line-height: 1.1em
      text-align: left

      a
        color: $grey-darker
        text-decoration: none


@media screen and (max-width: 767px)

  a.button
    background-color: $white
    color: $grey-darker
    border: 1px solid $grey-darker

  p.other
    text-align: left
    font-size: 16px !important
    line-height: 1.5em !important
